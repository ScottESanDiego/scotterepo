description="Omnissa Horizon Scanner Service"
command="/usr/lib64/omnissa/horizon/bin/ftscanhvd"
command_background="yes"
pidfile="/run/${RC_SVCNAME}.pid"

depend() {
	need localmount
	use net logger
	after bootmisc
}

start_pre() {
	checkpath --directory --mode 0755 /run
}

