[Unit]
Description=Omnissa Horizon USB Arbitrator
Documentation=https://docs.omnissa.com/
After=network.target

[Service]
Type=forking
ExecStart=/usr/lib64/omnissa/horizon/usb/horizon-eucusbarbitrator
ExecStop=/usr/lib64/omnissa/horizon/usb/horizon-eucusbarbitrator --kill
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target

